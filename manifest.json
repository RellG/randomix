{
  "manifest_version": 3,
  "name": "Randomix",
  "short_name": "Randomix",
  "version": "2.4.0",
  "description": "Advanced random password generator with entropy-based strength meter, dark/light themes, and PIN presets",
  "homepage_url": "https://github.com/RellG/randomix",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Randomix - Password Generator"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "minimum_chrome_version": "88"
}
